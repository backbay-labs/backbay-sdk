{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "references": [
    { "path": "packages/raymond" },
    { "path": "packages/contract" },
    { "path": "packages/api-client" },
    { "path": "packages/speakeasy" },
    { "path": "packages/glia-agent" },
    { "path": "packages/glia-three" },
    { "path": "packages/glia-desktop" },
    { "path": "packages/glia" },
    { "path": "packages/notary" },
    { "path": "packages/witness" },
    { "path": "packages/witness-react" }
  ],
  "exclude": ["node_modules", "**/dist", "**/node_modules"]
}
