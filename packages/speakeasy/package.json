{
  "name": "@backbay/speakeasy",
  "version": "0.1.0-alpha.1",
  "description": "P2P encrypted messaging with sigil-based agent handshakes",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./transport": {
      "types": "./dist/transport/index.d.ts",
      "import": "./dist/transport/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    }
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@noble/ed25519": "^2.2.3",
    "@noble/hashes": "^1.7.2",
    "@scure/bip39": "^1.5.4",
    "@chainsafe/libp2p-gossipsub": "^14.1.0",
    "@chainsafe/libp2p-noise": "^16.0.0",
    "@libp2p/bootstrap": "^11.0.0",
    "@libp2p/circuit-relay-v2": "^3.0.0",
    "@libp2p/identify": "^3.0.0",
    "@libp2p/peer-id": "^5.0.0",
    "@libp2p/webrtc": "^5.0.0",
    "@libp2p/websockets": "^9.0.0",
    "@multiformats/multiaddr": "^12.2.0",
    "libp2p": "^2.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "typescript": "^5.9.3",
    "tsup": "^8.5.1",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "p2p",
    "messaging",
    "ed25519",
    "libp2p",
    "gossipsub",
    "encrypted",
    "identity"
  ],
  "author": "Backbay <dev@backbay.industries>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/backbay/backbay-sdk.git",
    "directory": "packages/speakeasy"
  },
  "bugs": {
    "url": "https://github.com/backbay/backbay-sdk/issues"
  },
  "homepage": "https://github.com/backbay/backbay-sdk/tree/main/packages/speakeasy#readme"
}
