{
  "name": "backbay-sdk",
  "version": "0.1.0",
  "private": true,
  "description": "Backbay SDK - TypeScript and Python packages for the Backbay platform",
  "packageManager": "bun@1.1.24",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "build:ts": "turbo run build",
    "typecheck": "turbo run typecheck",
    "typecheck:all": "turbo run typecheck",
    "lint": "bun run lint:ts",
    "lint:ts": "eslint packages/contract/src packages/api-client/src packages/speakeasy/src packages/glia/src packages/notary/src packages/witness/src packages/witness-react/src",
    "lint:fix": "eslint packages/*/src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "node scripts/vitest.mjs run --workspace vitest.workspace.ts",
    "clean": "rm -rf packages/*/dist packages/*/.turbo node_modules/.cache .turbo",
    "docs:api": "typedoc",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@backbay/glia": "workspace:*",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@storybook/addon-docs": "10.2.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "^10.2.7",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3",
    "turbo": "^2.8.3",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "**/*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "resolutions": {
    "esbuild": "0.27.2",
    "resolve": "^1.22.8"
  }
}
